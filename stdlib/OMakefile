#
# Threads are optional
#
if $(THREADS_ENABLED)
    lm_threads.ml: lm_threads_system.ml
	$(symlink $<, $@)
else
    lm_threads.ml: lm_threads_null.ml
	$(symlink $<, $@)

#
# Library
#
include Files

MLZFILES = \
   lm_array_sig\
   lm_dag_sig\
   lm_linear_set_sig\
   lm_map_sig\
   lm_set_sig\

#
# Build the library.
#
OCamlLibraryInstall($(LMINSTALL), $(LIB), lmstdlib, $(STDLIB_FILES))

clean:
    $(CLEAN) lm_pervasives.ml

all: lmstdlib$(LIB_SUFFIX)
